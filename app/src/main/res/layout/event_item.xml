<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sample"
    android:clickable="true">

    <FrameLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/adlist_frame_layout"
        android:layout_margin="5dp"

        android:orientation="vertical">

        <ImageView
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:id="@+id/event_image_view"
            android:scaleType="fitXY"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal|bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">

                <TextView
                    android:id="@+id/event_name"
                    android:text="Mission Clean Ganga"
                    android:textSize="20sp"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:layout_height="fill_parent"
                    android:layout_width="150dp"
                    android:gravity="bottom|left"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:text="Dataed :18th June 2016"
                    android:textSize="20sp"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:layout_height="fill_parent"
                    android:layout_width="200dp"
                    android:gravity="bottom|right"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">

                <TextView
                    android:text="Indian Gov Initiative"
                    android:textSize="16sp"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:layout_height="fill_parent"
                    android:layout_width="200dp"
                    android:gravity="bottom"
                    android:layout_gravity="bottom|left"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:text="Indian Gov"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:textColor="@color/com_facebook_share_button_text_color"
                    android:layout_height="fill_parent"
                    android:layout_width="150dp"
                    android:gravity="bottom|right"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>
        </LinearLayout>


    </FrameLayout>


</LinearLayout>
